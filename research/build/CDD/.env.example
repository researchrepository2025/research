# CDD - Commercial Due Diligence System
# Copy this file to .env and fill in your values

# Required: Anthropic API Key
ANTHROPIC_API_KEY=your_api_key_here

# Model Configuration (optional - defaults shown)
# Options: sonnet, opus, haiku
DEFAULT_MODEL=sonnet
ORCHESTRATOR_MODEL=opus
RESEARCH_MODEL=sonnet
ANALYSIS_MODEL=sonnet
SYNTHESIS_MODEL=opus

# Paths (optional - defaults shown)
OUTPUT_DIR=outputs
TEMPLATE_DIR=templates

# Workflow Configuration (optional)
ENABLE_CHECKPOINTS=true
MAX_RESEARCH_DEPTH=3
PARALLEL_RESEARCH=true

# Permission Mode (optional)
# Options: default, acceptEdits, bypassPermissions
PERMISSION_MODE=acceptEdits
